<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <h1>Editing Diary</h1>

      <% if @diary.errors.any? %>
                <p><%= @diary.errors.count %>errors prohibited this obj from being saved:</p>
                  <% @diary.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %> 
      <% end %> 

      <h4>Title</h4>
      <%= form_for(@diary) do |f| %>
        <%= f.text_field :title ,class: "col-xs-12" %>
      <h4>Opinion</h4>
        <%= f.text_area :content ,class: "col-xs-12"%>
        <br>
        <%= f.submit 'Update' ,class: "btn btn-primary col-xs-12"%>
        <%= link_to "Show", diary_path(@diary) %> |
        <%= link_to "Back", diaries_path, class: "back" %>
      <% end %>
    </div>
    <div class="col-md-3"></div>

  </div>
</div>