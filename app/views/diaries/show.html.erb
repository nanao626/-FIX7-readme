<section class="slice slice-lg sct-color-1">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="form-user style-1 rounded has-shadow-1">
                    <div class="form-header text-center">
                        <h2 class="form-header-title">＜Diary＞</h2>
                    </div>
                    <div class="form-body">
                            <div class="form-group has-icon">
                                <strong>Time</strong>
                                <%= @diary.start_time.strftime("%Y-%m-%d %H:%M") %>
                                <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
                            </div>
                            <div class="form-group has-icon">
                                <strong>Title</strong>
                                <%= @diary.title %>
                                <span class="fa fa-envelope form-control-icon" aria-hidden="true"></span>
                            </div>
                            <div class="form-group has-icon">
                                <strong>Content</strong>
                                <%= @diary.content %>
                                <span class="fa fa-lock form-control-icon" aria-hidden="true"></span>
                            </div>
                    </div>
                    <%= link_to 'Edit', edit_diary_path(@diary) %> |
                    <%= link_to 'Back', diaries_path %>
                </div>
            </div>
        </div>
    </div>
</section>
