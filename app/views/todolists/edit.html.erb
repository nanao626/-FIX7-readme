<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

    <h1>Editing Task</h1>

    <% if @todolist.errors.any? %>
      <p><%= @todolist.errors.count %>errors prohibited this obj from being saved:</p>
      <% @todolist.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %> 
    <% end %> 

    <h4>Title</h4>
    <%= form_for(@todolist) do |f| %>
        <%= f.text_field :title ,class: "col-xs-12 book_title"%>
        
    <h4>Opinion</h4>
    <%= f.text_area :content ,class: "col-xs-12 book_body"%>
